@{
    ViewBag.Title = "Orders";
}
@model IList<Playground.Legacy.Web.Data.Order>

<div>
    @if (Model.Count == 0)
    {
        <h2>No orders for customer</h2>
    }
    else
    {
        <h2>Orders for customer: @Model.First().CustomerID</h2>

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>EmployeeId</th>
                    <th>Order Date</th>
                    <th>Shipped Date</th>
                    <th>Freight</th>
                    <th>Ship Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>
                            @order.OrderID                    
                        </td>
                        <td>
                            @order.EmployeeID
                        </td>
                        <td>
                            @order.OrderDate
                        </td>
                        <td>
                            @order.ShippedDate
                        </td>
                        <td>
                            @order.Freight
                        </td>
                        <td>
                            @order.ShipName
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
